<table class="table-expedients">
  <thead>
    <tr class="bg-gray-50 border-b border-gray-200 text-gray-700 text-sm uppercase">
      <th class="px-6 py-3 font-semibold"> <%= sortable('file_number', 'Número') %> </th>
      <th class="px-6 py-3 font-semibold text-center"> <%= sortable('subjects.name', 'Tema') %> </th>      
      <th class="px-6 py-3 font-semibold text-center"> <%= sortable('destinations.name', 'Destino') %> </th>
      <th class="px-6 py-3 font-semibold text-center">Responsable</th>
      <% if params[:treated] == 'true' %>
        <th class="px-6 py-3 font-semibold text-center">Fecha tratado</th>
      <% else %>
        <th class="px-6 py-3 font-semibold text-center">Fecha de carga</th>
      <% end %>
      <th class="px-6 py-3 font-semibold text-center">Acciones</th>
    </tr>
  </thead>

  <tbody class="divide-y divide-gray-100 text-gray-700">
    <% expedients.each do |expedient| %>
      <%= render "expedient", expedient: expedient %>
    <% end %>
    <% if expedients.empty? %>
      <tr>
        <td class="p-6 font-medium">No hay expedientes cargados aún</td>
      </tr>
    <% end %>
  </tbody>
</table>
