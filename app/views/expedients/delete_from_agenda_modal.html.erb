<%= render 'shared/modal' do %>
 <div class="modal-container animate-scale-in space-y-4 ">
    <h2 class="modal-title">Eliminar expediente <%= @page %> y <%= params[:page] %></h2>
    <div>¿Estas seguro que querés eliminar el expediente "<%= @expedient.file_number %>" de la orden?</div>
    <div class="flex justify-end gap-4">
      <%= close_modal_button %>
      <%= link_to 'Eliminar', delete_from_agenda_expedient_path(@expedient, page: params[:page]), data: { turbo_method: :put, turbo_frame: '_top' }, class: 'bg-primary-color text-white px-4 py-2 rounded-lg transition font-medium' %>
    </div>
  </div>
<% end %>