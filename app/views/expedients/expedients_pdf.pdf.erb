<style>
  table {
    width: 100%;
    border-collapse: collapse;
    font-size: 14px;
    margin-top: 10px;
  }

  thead {
    display: table-header-group;
  }

  thead tr {
    background-color: #f5f5f5;
  }

  thead th {
    padding: 8px;
    text-align: center;
    font-weight: bold;
  }

  tbody tr {
    page-break-inside: avoid;
    border-bottom: 1px solid #ccc;
  }

  tbody td {
    padding: 8px;
    vertical-align: top;
  }

  .col-number {
    width: 20%;
    font-weight: bold;
    text-align: center;
  }

  .col-destination {
    width: 20%;
    text-align: center;
  }

  .col-detail {
    text-align: left;
  }

  .col-responsible {
    width: 15%;
    text-align: center;
  }
</style>


