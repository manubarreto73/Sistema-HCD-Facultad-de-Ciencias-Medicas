<div class="index-container">
  <div class="index-background">
    <div class="index-title-container">
      <h2 class="text-2xl font-semibold text-gray-800">Historial del expediente <%= @expedient.file_number %>
      </h2>
    </div>

    <table class="w-full mx-auto">
      <thead class="bg-gray-50 border-b border-gray-200 text-gray-700 text-sm uppercase">
        <tr>
          <th class="px-6 py-3 font-semibold">Acción</th>
          <th class="px-6 py-3 font-semibold">Descripcion</th>
          <th class="px-6 py-3 font-semibold">Fecha y hora</th>
          <th class="px-6 py-3 font-semibold">Responsable</th>
        </tr>
      </thead>
      <tbody class="divide-gray-300 divide-y-2">
        <% if @expedient.expedient_histories.any? %>
          <% @expedient.expedient_histories.each do |h| %>
            <tr class="text-gray-600">
              <td class="p-4 text-center"><%= h.action_name %></td>
              <td class="p-4">
                <%=  h.title %> <br>
                <% h.rows.each do |r| %>
                  <%= r %> <br>
                <% end %>
              </td>
              <td class="p-4 text-center"><%= h.created_at.in_time_zone.strftime("%Y-%m-%d %H:%M:%S") %></td>
              <td class="p-4 text-center"><%= h.user.name %></td>
            </tr>
            <% end %>
          <% else %>
              <td class="p-4">
                Aún no hay historial
              </td>
          <% end %>
      </tbody>
    </table>
  </div>
</div>