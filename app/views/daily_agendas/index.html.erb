<div class="index-container">
  <div class="index-background">
    <div class="index-title-container justify-between">  <!-- Volver -->
    <div class="w-1/3">
      <%= link_to today_daily_agendas_path, class: "flex items-center text-gray-600 hover:text-gray-800 font-medium" do %>
        <span class="material-icons mr-1 w-1/3">< Volver</span>
      <% end %>
      </div>
      <div class="w-1/3 text-center font-bold text-2xl">Ordenes del día tratadas</div>
      <!-- Navegación por mes -->
      <div class="flex justify-end items-center gap-4 w-1/3">
        <%= link_to daily_agendas_path(month: @prev_month, year: @prev_year),
                    class: "p-2 rounded-full hover:bg-gray-100" do %>
          <span class="material-icons"><</span>
        <% end %>

        <span class="text-xl font-medium w-42 text-center">
          <%= I18n.l(Date.new(@year, @month), format: "%B %Y").capitalize %>
        </span>

        <%= link_to daily_agendas_path(month: @next_month, year: @next_year),
                    class: "p-2 rounded-full hover:bg-gray-100" do %>
          <span class="material-icons"> > </span>
        <% end %>
      </div>
    </div>
   
    <div class="grid grid-cols-7 gap-2 text-center font-semibold text-gray-600 mb-2">
      <div>Lun</div>
      <div>Mar</div>
      <div>Mié</div>
      <div>Jue</div>
      <div>Vie</div>
      <div>Sáb</div>
      <div>Dom</div>
    </div>

    <div class="grid grid-cols-7 gap-4 p-2">
      <% @days_agenda.each do |day| %>
        <% if day.month == @month %>
          <% if @daily_agendas[day] %>
            <%= link_to @daily_agendas[day], class: 'bg-gray-100 border-gray-200 border font-light text-center rounded-xl p-2 hover:shadow-xl transition hover:scale-105', data: { turbo_frame: 'modal' } do %>
                <%= @daily_agendas[day].date_name %>
            <% end %>
          <% else %>
            <div class="bg-gray-100 rounded-xl p-2 h-12 transition"></div>
          <% end %>
        <% else %>
          <div class="rounded-xl p-2 h-12 bg-gray-200"></div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<%= turbo_frame_tag 'modal' %>