<div class="min-h-screen flex items-center justify-center bg-gray-200 px-4">
  <div class="bg-white p-8 rounded-3xl shadow-xl w-full max-w-md">
    <h3 class="text-2xl font-semibold text-gray-800 text-center mb-6">TTPS - Sistema HCD Facultad de Ciencias Médicas</h3>
    <h2 class="text-2xl font-semibold text-gray-800 text-center mb-6">
      Iniciar sesión
    </h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
      <div class="flex flex-col space-y-4">
        
        <div class="field">
          <%= f.label :email, "Correo electrónico", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-500" %>
        </div>

        <div class="field">
          <%= f.label :password, "Contraseña", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password, autocomplete: "current-password",
                class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-gray-500" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-gray-600 border-gray-300 rounded" %>
            <%= f.label :remember_me, "Recordarme", class: "ml-2 text-sm text-gray-600" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Iniciar sesión",
                class: "w-full bg-gray-800 text-white py-2 rounded-lg hover:bg-gray-700 transition font-medium cursor-pointer" %>
        </div>
      </div>
    <% end %>

    <div class="mt-6 text-center text-sm text-gray-600 space-y-1">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
