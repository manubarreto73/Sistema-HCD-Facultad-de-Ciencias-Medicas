<div class="min-h-screen flex items-center justify-center bg-gray-200 px-4">
  <div class="bg-white p-8 rounded-3xl shadow-xl w-full max-w-md border-t-4 primary-color border-primary">

    <!-- Título -->
    <h3 class="text-2xl font-semibold text-center mb-3 primary-color">
      Sistema HCD Facultad de Ciencias Médicas
    </h3>

    <!-- Logo debajo del título -->
    <div class="flex justify-center mb-6">
      <%= image_tag "fcm_unlp_logo.png",
          alt: "Logo Facultad de Ciencias Médicas - UNLP",
          class: "h-16 w-auto" %>
    </div>

    <h2 class="text-2xl font-semibold text-gray-800 text-center mb-6">
      Iniciar sesión
    </h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
      <div class="flex flex-col space-y-4">

        <div class="field">
          <%= f.label :email, "Correo electrónico",
                class: "block text-sm font-medium mb-1",
                style: "color:#009999;" %>

          <%= f.email_field :email,
                autofocus: true,
                autocomplete: "email",
                class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2",
                style: "focus:ring-color:#009999;" %>
        </div>

        <div class="field">
          <%= f.label :password, "Contraseña",
                class: "block text-sm font-medium mb-1",
                style: "color:#009999;" %>

          <%= f.password_field :password,
                autocomplete: "current-password",
                class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2",
                style: "focus:ring-color:#009999;" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field flex items-center">
            <%= f.check_box :remember_me,
                  class: "h-4 w-4 border-gray-300 rounded",
                  style: "accent-color:#009999;" %>

            <%= f.label :remember_me, "Recordarme",
                  class: "ml-2 text-sm",
                  style: "color:#009999;" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Iniciar sesión",
                class: "w-full text-white py-2 rounded-lg transition font-medium cursor-pointer bg-primary-color" %>
        </div>

      </div>
    <% end %>

    <div class="mt-6 text-center text-sm space-y-1" style="color:#009999;">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

